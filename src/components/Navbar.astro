---
import Logo from "./Logo.astro";
import Button from "./Button.astro";
import Arrow from "./Arrow.astro";

const LINKS = [
  { href: "#does", label: "What Lasso does" },
  { href: "#statistics", label: "Statistics" },
];
---

<nav class="fixed z-10 flex h-[8vh] w-full justify-between">
  <!-- <script>
    document.onclick = () => console.log("click");
  </script> -->
  <div class="flex items-center">
    <Logo />
    <ul class="hidden px-8 md:flex">
      {
        LINKS.map((link) => {
          return (
            <li class="pr-8 text-[12px]">
              <a
                class=" text-lgr flex items-center justify-center duration-300 ease-out hover:text-white"
                href={link.href}
              >
                <div class=" pr-4">{link.label}</div>

                <div class="aspect-square h-[2em] ">
                  <Arrow color="#fff" />
                </div>
              </a>
            </li>
          );
        })
      }
    </ul>
  </div>

  <div class="flex items-center">
    <Button>Get Started</Button>
  </div>
</nav>
