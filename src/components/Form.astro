---
import Arrow from "./Arrow.astro";
---

<form action="" class="flex flex-col lg:items-end">
  <div class="flex justify-between border-b py-4">
    <!-- <label for="femail">Email</label><br /> -->
    <input
      class="min-w-[15vw]"
      type="email"
      id="femail"
      name="femail"
      placeholder="Enter Email for Invite"
    /><br />
    <button
      type="submit"
      class="flex aspect-square h-10 items-center justify-center rounded-md rounded-br-xl bg-yellow p-3 text-black duration-300 ease-out hover:bg-white"
    >
      <div class="h-full w-full">
        <Arrow color="#000" />
      </div>
    </button>
  </div>
  <p class="py-2">We're an invite only community</p>
</form>

<style>
  input {
    all: unset;
  }

  input::placeholder {
    color: #fff;
  }
</style>
